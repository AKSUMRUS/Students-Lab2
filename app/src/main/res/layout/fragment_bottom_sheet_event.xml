<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutBottomSheet"
    style="@style/AppModalStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="80dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_dialog"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="50px"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lecture"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/titleEventSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Информационные технологии"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10dp"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopBLockSheet"
                android:layout_marginLeft="@dimen/leftMarginBlockSheet"
                >
                <ImageView
                    android:layout_width="@dimen/imageHeight"
                    android:layout_height="25dp"
                    android:src="@drawable/time_event"
                    />

                <TextView
                    android:id="@+id/timeEventSheet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="1 января, понедельник, 10:00 - 11:00"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="@dimen/leftMarginSheetDescription"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopBLockSheet"
                android:layout_marginLeft="@dimen/leftMarginBlockSheet"
                >
                <ImageView
                    android:layout_width="@dimen/imageHeight"
                    android:layout_height="25dp"
                    android:src="@drawable/geopoint_event"
                    />

                <TextView
                    android:id="@+id/addressEventSheet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="1-ый корпус, 227 аудитория"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="@dimen/leftMarginSheetDescription"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/marginTopBLockSheet"
                android:layout_marginLeft="@dimen/leftMarginBlockSheet"
                >
                <ImageView
                    android:layout_width="@dimen/imageHeight"
                    android:layout_height="25dp"
                    android:src="@drawable/time_event"
                    />

                <TextView
                    android:id="@+id/teacherNameEventSheet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Проф. Иванов Иван Иванович"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="@dimen/leftMarginSheetDescription"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="25dp"
                android:textSize="20dp"
                />


            <TextView
                android:id="@+id/textViewSheet"
                android:layout_width="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="Мероприятие направлено на совершенствование своих компетенций в области ИТ."/>
        </LinearLayout>

        <Button
            android:id="@+id/subscribe_me"
            android:layout_width="350px"
            android:layout_height="wrap_content"
            android:text="Записаться"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_button_subscribe"
            android:layout_marginTop="150dp"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>

</LinearLayout>